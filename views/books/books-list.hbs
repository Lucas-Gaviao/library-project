<h1>Books in our DB:</h1>

{{#each books}}
    <section class="book-summary">
        <h2>{{this.title}}</h2>
        <p>
            Author: {{this.author.name}} <br />
            Rating: {{this.rating}} <br />
            <a href="/books/{{this._id}}">More details</a>
            <a href="/books/{{this._id}}/edit">Update</a>
            <a href="/books/{{this._id}}/delete">Delete</a>
        </p>
    </section>
{{/each}}